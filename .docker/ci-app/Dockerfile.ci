FROM ruby:3.3-alpine
RUN apk --update add nodejs yarn git build-base bash mysql-dev postgresql16-dev sqlite-dev tzdata shared-mime-info libssl1.1
RUN mkdir /app
WORKDIR /app
ENV RAILS_ENV='test'
COPY . .
RUN ls config/*example | xargs -I{} echo {} |  cut -d '.' -f-2 | xargs -I{} cp {}.example {}
CMD ["bash"]
