    padding-left: 0;
  }
  #tools-navbar li, #tools-navbar li a {
    display: block;
    width: 100%;
    color: white!important;
    background-color: #A50030!important;
    border-radius: 0;
    margin-bottom: 2px;
    padding-left: 10px;
  }
  .bookmarks-tools #tools-navbar li, .bookmarks-tools #tools-navbar li a {
    display: block;
    width: 100%;
    color: #A50030!important;
    background-color: transparent!important;
    border-radius: 0;
    margin-bottom: 2px;
    padding-left: 10px;
  }
  #bookmarks-sendto .dropdown-menu {
    position: absolute;
    top: auto!important;
    left: auto!important;

  }
  .nav-tools div.toggle_bookmark {
    padding-top: 0;
    min-height: auto;
  }
  .nav-tools div.toggle_bookmark label {
    color: $white;
    min-width:auto;
  }
  .nav-tools div.toggle_bookmark input.toggle_bookmark {
    visibility: hidden!important;
  }
  .nav-tools div.toggle_bookmark span {
    position:relative;
    left:-10px;
  }
  #sendto {
    margin-top: auto;
    margin-left: auto;
    position:relative;
    z-index:0;
    display:block;
    background-color: transparent;
    float: none!important;
  }
  #sendto button {
    border: 0;
    background-color: #A50030;
    color: $white;
  }
  #sendto-menu {
    background-color: #A50030;
  }
  #sendto ul {
    float:none;
    position:relative;
    background-color: $white;
  }
  #sendto .dropdown-menu {
    background-color: #A50030;
    width: 100%;
  }
  .sendto-item {
    margin-left: 0;
    display:block;
    background-color: #A50030!important;
    /*border-bottom: solid $white2px;*/
  }
  .pub-date-separator {
    margin-left: 0;
  }
  #range_pub_date_sort_end {
    margin-left: 0;
  }
  .submit-buttons {
      margin-right: 0;
  }
}
@media(max-width:485px) {
  #user-util-links ul.navbar-nav, #user-util-links ul.navbar-nav li a  {
    display: block;
    clear: left;
    /*float: left;*/
    padding: 4px 0 0 2px;
  }
  .submit-buttons {
      margin-top: 20px;
  }
  .nav-header-links {
    display: grid;
    font-size:16px;
  }
  .path-links {
  	height: auto;
    text-align: left;
  }
}

