@import "partials/_vars.scss";

/* === GENERAL STYLES === */
body {
  font-size: 0.875rem;
}

#main-container {
  padding-bottom: 3.125rem;
}

.breadcrumb {
  background-color: transparent;
  font-size: 0.875rem;
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 0.0625rem 0.0625rem rgba(96, 96, 96, 0.075), 0 0 0.5rem rgba(96, 96, 96, 0.6);
}

.breadcrumb > li + li:before {
    color: $med-grey;
    content: "/";
    padding: 0 0.3125rem;
}

#documents {
  // border-top: 1px solid #CCC;
  margin-left: 0;
  padding: 0 0 0 1.25rem;

  @media(max-width: 600px) {
    padding-left: 0.9375rem !important;
  }
}

div #documents .document {
  border-bottom: none !important;
}

.btn-link {
  color: $red;
}

.btn-link:hover {
  color: $red;
  text-decoration: underline;
}

/* === INDIVIDUAL RECORD PAGES === */
#record-page-content {
  background-color: $white;
  border-radius: 0.3125rem 0.3125rem 0 0;

  @media(max-width: 600px) {
    text-align: center;
 	}
}

.record-page-wrapper {
  padding: 1.25rem;
}

#record-page-content h1 {
  font-size: 1.75rem;
  padding-left: 1.15rem;
  padding-top: 1.25rem;
}

.record-page-wrapper .thumbnail {

  @media(max-width: 600px) {
    padding-bottom: 1.25rem;
 	}
}

dl dt.index-label {
  padding-right: 0;
  text-align: right;

  @media(max-width: 600px) {
    text-align: left;
 	}
}

dl dd {
  text-align: left;
}

#stafflink {
  padding: 1.25rem 0.625rem;
}

