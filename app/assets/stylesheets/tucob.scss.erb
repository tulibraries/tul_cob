@import "partials/_vars.scss";

/* === GENERAL STYLES === */
#documents {
  background-color: $white;
  border-radius: 0 0 5px 5px;
  border-top: 1px solid #CCC;
  margin-left: 0;
  margin-top: -5px;
  padding: 0 0 0 20px;
}
div #documents .document {
  border-bottom: none !important;
}

#previousNextDocument {
  padding: 20px 20px 10px 20px;
}

#record-page-content {
  background-color: $white;
  border-radius: 5px 5px 0 0;
}

.record-page-wrapper {
  padding: 40px;
}

#record-page-content h1 {
  padding-left: 20px;
}

#record-view-iframe, #stafflink {
  margin-left: 10%;
  max-width: 850px;
}

hr.document-divider {
	margin: 0 30px 0 10px;
	padding: 0;
}

#stafflink {
  padding-top: 10px;
  padding-left: 7px;
}

h1[itemprop="name"] {
  font-size: 28px;
}

h1.advanced.page-header a {
  display:none;
}

.page-header.row {
  margin-top: 7px;
  @media(max-width:767px) {
    margin-top: -14px;
  }
}

.btn-link {
  color: $red;
}

.btn-link:hover {
  color: $red;
  text-decoration: underline;
}

.explantion-wrapper {
  position: inherit;
  justify-content: space-between;
  margin: 0 auto 20px auto;
  padding-left: 8%;
  @media(max-width: 600px) {
    margin: 30px auto 20px auto;
  }
  @media(max-width: 600px) {
    margin: 0 auto 20px auto;
  }
}

.explanation {
  font-size: 1.1em;
}

.explantion-btn {
  font-size: 1.1em;
  transform: translateY(-20%);
  @media(max-width: 485px) {
    transform: translateY(70%);
  }
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 1px 1px rgba(96, 96, 96, 0.075), 0 0 8px rgba(96, 96, 96, 0.6);
}

.format-concatenator {
  padding-left:7px;
  padding-right:14px;
}

.document-metadata form {
  margin-top: 14px;
}

.index-label {
  color: #595959 !important;
}

.list_items {
  list-style-type: none;
}

/* === HOME PAGES === */
#page-wrapper {
  background-color: #F4F6F5;
  min-height: calc(100vh - 100px) !important;
  padding-bottom: 50px;
}

#getting-started {
  margin: 30px;
  font-size: 16px;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  font-size: 16px;
  text-align: center !important;
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  float: none;
  font-size: 18px;
  padding-top: 20px;
}

.no-results-tips {
  font-size: 16px;
}

.noresults {
  padding-bottom: 20px !important;
}

.not-at-temple {
  font-size: 16px;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
.thumbnail {
  border: 0;
  display: block;
  padding: 0;
  width: 100px;
}

img {
  height: auto;
  max-height: 100%;
  max-width: 100%;
  width: auto;
}

.record-view.thumbnail {
  border: 0 !important;
}

.record-view.thumbnail img {
  border: 0 !important;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 42px;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 20px;
}

.loading-message{
  font-size: 18px;
}

.glyphicon.spinning {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

.electronic-notes {
  padding-top: 10px;
}

/* === MEDIA QUERIES === */
@media (min-width: 992px) {
  .document dt {
    margin-left: 90px;
    text-align: right;
    white-space: normal;
    width: 142px;
    word-break: break-word;
  }
  .dl-horizontal dd {
    margin-left: 240px;
  }
  .dl-horizontal dd.blacklight-availability {
    margin-left: 21px;
    padding-top: 5px;
  }
}

@media (max-width: 991px) {
  .document dt {
    float: none;
    margin-left: 0px;
    text-align: left;
    white-space: normal;
    width: 100px;
    word-break: break-word;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
  #record-page-nav-tools {
    clear: both;
    float: left!important;
    padding-top: 14px;
    padding-right: 0;
  }
  .aeon-request {
    float: none;
    margin-top: 0 !important;
  }
}

@media (max-width: 768px) {
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
  #appliedParams {
    padding-left: 7px;
  }
  #previousNextDocument {
    padding-left: 14px;
  }
  #document h1 {
    padding-left: 14px;
  }
  .col-xs-12 {
    float: none;
  }
}

@media (max-width: 601px) {
  .input-group-addon {
    padding: 0;
  }
  #nav-tools {
    margin-top: 14px;
    width: 100%;
  }
  #tools-navbar {
    padding-left: 0;
  }
  #tools-navbar li, #tools-navbar li a {
    background-color: $red !important;
    border-radius: 0;
    color: $white !important;
    display: block;
    margin-bottom: 2px;
    padding-left: 10px;
    width: 100%;
  }
  .bookmarks-tools #tools-navbar li, .bookmarks-tools #tools-navbar li a {
    background-color: transparent !important;
    border-radius: 0;
    color: $red !important;
    display: block;
    margin-bottom: 2px;
    padding-left: 10px;
    width: 100%;
  }
  #bookmarks-sendto .dropdown-menu {
    left: auto !important;
    position: absolute;
    top: auto !important;
  }
  .nav-tools div.toggle_bookmark {
    padding-top: 0;
    min-height: auto;
  }
  .nav-tools div.toggle_bookmark label {
    color: $white;
    min-width: auto;
  }
  .nav-tools div.toggle_bookmark input.toggle_bookmark {
    visibility: hidden!important;
  }
  .nav-tools div.toggle_bookmark span {
    left:-10px;
    position:relative;
  }
  #sendto {
    background-color: transparent;
    display:block;
    float: none!important;
    margin-top: auto;
    margin-left: auto;
    position:relative;
    z-index:0;
  }
  #sendto button {
    background-color: $red;
    border: 0;
    color: $white;
  }
  #sendto-menu {
    background-color: $red;
  }
  #sendto ul {
    background-color: $white;
    float:none;
    position:relative;
  }
  #sendto .dropdown-menu {
    background-color: $red;
    width: 100%;
  }
  .sendto-item {
    background-color: $red !important;
    display:block;
    margin-left: 0;
  }
  .pub-date-separator {
    margin-left: 0;
  }
  #range_pub_date_sort_end {
    margin-left: 0;
  }
  .submit-buttons {
    margin-right: 0;
  }
}

@media(max-width:485px) {
  .submit-buttons {
    margin-top: 20px;
  }
}

