/* ALMA DATA TABLE */
.border-bottom td, .border-bottom th {
  border-bottom: 1px solid #CFC7B0;
  /*border: solid red 1px;*/
}

table.border-bottom {
  border: 1px solid #CFC7B0;
  border-top: 0;
  padding: 0 !important;
  margin: 0 !important;

}
table.border-bottom {
  th[headers*="location"] {
    width: 17%;
  }
  td[scope*="row"] {
    width: 10%;
  }
  td[headers*="desc"] {
    width: 25%;
  }
  td[headers*="callnum"] {
    width: 22%;
  }
  td[headers*="note"] {
    width: 7%;
  }
  td[headers*="status"] {

    width: 20%;
  }
}

.table-heading {
  background-color: #F1EFE8;
}

.table-wrapper {
  display: block;
  max-height: 300px;
  overflow-y: scroll;
  overflow-x: hidden;
  margin-right: -10px;
  margin-bottom: 0 !important;

}

.table-wrapper::-webkit-scrollbar {
  width: 10px;
  border-left: solid #CFC7B0 1px;
}

.table-wrapper::-webkit-scrollbar-thumb {
    background: gray;
}


/* RECORD NAV TOOLS */

.cite-modal {
  padding: 14px;
}
.page-links {

}
#record-page-nav-tools {
  float: right;
  padding-right: 142px;
}
.nav-tools {
  display: inline-block;
}
