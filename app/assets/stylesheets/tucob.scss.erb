/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  font-size: 1rem;
  margin: 1.875rem;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  padding-left: 5rem;

  @media(max-width: 600px) {
    padding-left: 0;
 	}
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  font-size: 1.125rem;
  padding-top: 1.25rem;
}

.no-results-tips {
  font-size: 1rem;
}

.noresults {
  padding-bottom: 1.25rem;
}

.not-at-temple {
  font-size: 1rem;
  margin-right: 1.25rem;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
div.thumbnail img.default {
  height: 5.625rem;
  width: 5.625rem;
  opacity: .25;
}

.thumbnail a > img {
  border: 0;
  display: block;
  height: auto;
  margin-top: 1.25rem;
  padding: 0;
  max-width: 100%;
}

img {
  height: auto;
  max-height: 100%;
  max-width: 100%;
  width: auto;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 2.625rem;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 1.25rem;
}

.loading-message{
  font-size: 1.125rem;
}

.fa-spinner {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

.electronic-notes {
  padding-top: 0.625rem;
}

