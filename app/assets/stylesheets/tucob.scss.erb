/* === MEDIA QUERIES === */

@media (min-width: 992px) {
  .document dt {
    white-space: normal;
    width: 142px;
    text-align: right;
    word-break: break-word;
    margin-left: 90px;
  }
  .dl-horizontal dd {
    margin-left: 240px;
  }
  .dl-horizontal dd.blacklight-availability {
    margin-left: 21px;
    padding-top: 5px;
  }

  .bento_item .dl-horizontal dd {
    margin-left: 120px;
  }

  .bento_item .dl-horizontal dt {
    width: 50%;
  }
}

@media (max-width: 1200px) {
  div.navbar-form {
    margin-left: -21px;
  }
}

@media (max-width: 991px) {
  div.navbar-form {
    margin-left: 0px;
    padding-top: 0px;
  }
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: left;
    word-break: break-word;
    margin-left: 0px;
    float: none;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
  #record-page-nav-tools {
    float: left!important;
    clear: both;
    padding-top: 14px;
    padding-right: 0;
  }
}

@media (max-width: 768px) {
  #search-navbar .search-query-form  {
    margin-left: 7px;
  }
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
  #user-util-links li, #user-util-links li a, ul.navbar-nav {
    display: inline-block;
    float: left;
  }
  #appliedParams {
    padding-left: 7px;
  }
  #previousNextDocument {
    padding-left: 7px;
  }
  #document h1 {
    padding-left: 7px;
  }
  .col-xs-12 {
    float: none;
  }
}
@media (max-width: 601px) {
  .input-group-addon {
    padding: 0;
  }

  #search_field  {
    width: 90% !important;
  }

  #search-navbar .input-group-addon.for-search-field {
    width: 15ch;
  }

  #nav-tools {
    margin-top: 14px;
    width: 100%;
  }
  #tools-navbar {
    padding-left: 0;
  }
  #tools-navbar li, #tools-navbar li a {
    display: block;
    width: 100%;
    color: white!important;
    background-color: #A50030!important;
    border-radius: 0;
    margin-bottom: 2px;
    padding-left: 10px;
  }
  .bookmarks-tools #tools-navbar li, .bookmarks-tools #tools-navbar li a {
    display: block;
    width: 100%;
    color: #A50030!important;
    background-color: transparent!important;
    border-radius: 0;
    margin-bottom: 2px;
    padding-left: 10px;
  }
  #bookmarks-sendto .dropdown-menu {
    position: absolute;
    top: auto!important;
    left: auto!important;
  }
  .nav-tools div.toggle_bookmark {
    padding-top: 0;
    min-height: auto;
  }
  .nav-tools div.toggle_bookmark label {
    color: #fff;
    min-width:auto;
  }
  .nav-tools div.toggle_bookmark input.toggle_bookmark {
    visibility: hidden!important;
  }
  .nav-tools div.toggle_bookmark span {
    position:relative;
    left:-10px;
  }
  #sendto {
    margin-top: auto;
    margin-left: auto;
    position:relative;
    z-index:0;
    display:block;
    background-color: transparent;
    float: none!important;
  }
  #sendto button {
    border: 0;
    background-color: #A50030;
    color: #fff;
  }
  #sendto-menu {
    background-color: #A50030;
  }
  #sendto ul {
    float:none;
    position:relative;
    background-color: #fff;
  }
  #sendto .dropdown-menu {
    background-color: #A50030;
    width: 100%;
  }
  .sendto-item {
    margin-left: 0;
    display:block;
    background-color: #A50030!important;
    /*border-bottom: solid #fff 2px;*/
  }
}

