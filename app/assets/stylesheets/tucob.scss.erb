/* === MEDIA QUERIES === */

@media (min-width: 992px) {
  .document dt {
    white-space: normal;
    width: 142px;
    text-align: right;
    word-break: break-word;
    margin-left: 90px;
  }
  .dl-horizontal dd {
    margin-left: 240px;
  }
  .dl-horizontal dd.blacklight-availability {
    margin-left: 21px;
    padding-top: 5px;
  }
}

@media (max-width: 991px) {

  .document dt {
    white-space: normal;
    width: 100px;
    text-align: left;
    word-break: break-word;
    margin-left: 0px;
    float: none;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
  #record-page-nav-tools {
    float: left!important;
    clear: both;
    padding-top: 14px;
    padding-right: 0;
  }
  .aeon-request {
    float: none;
    margin-top: 0 !important;
  }
}

@media (max-width: 768px) {
  #search-navbar .search-query-form  {
    margin-left: 7px;
  }
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
  #appliedParams {
    padding-left: 7px;
  }
  #previousNextDocument {
    padding-left: 14px;
  }
  #document h1 {
    padding-left: 14px;
  }
  .col-xs-12 {
    float: none;
  }
}
