@import "partials/_vars.scss";

/* === GENERAL STYLES === */
body {
  font-size: 0.875rem;
}

#main-container {
  padding-bottom: 5.125rem !important;


  @media(min-width: 992px) {
    // max-width: 82.5rem !important;
    // padding-left: 1.5625rem !important;
  }

  @media(min-width: 768px) {
    // max-width: 56.25rem;
    // padding-left: 1.875rem;
  }
}

.breadcrumb {
  background-color: transparent;
  font-size: 0.875rem;
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 0.0625rem 0.0625rem rgba(96, 96, 96, 0.075), 0 0 0.5rem rgba(96, 96, 96, 0.6);
}

.breadcrumb > li + li:before {
    color: $med-grey;
    content: "/";
    padding: 0 0.3125rem;
}

#documents {
  margin-left: 0;
  padding: 0 0 0 1.25rem;

  @media(max-width: 600px) {
    padding-left: 0.9375rem !important;
  }
}

div #documents .document {
  border-bottom: none !important;
}

.btn-link {
  color: $red;
}

.btn-link:hover {
  color: $red;
  text-decoration: underline;
}

.hidden {
  display: none;
}

.electronic-notes {
  padding-top: 0.625rem;
}

.error-header {
  font-family: "PT Sans";
}

/* === LIBRARIAN TEMPLATE === */
.librarian-header {
  font-size: 1.5rem;
}

#marc_view  {
  color: $grey;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  font-size: 1rem;
  margin: 1.875rem;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  padding-left: 5rem;

  @media(max-width: 600px) {
    padding-left: 0;
 	}
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  font-size: 1.125rem;
  padding-top: 1.25rem;
}

.no-results-tips {
  font-size: 1rem;
}

.noresults {
  padding-bottom: 1.25rem;
}

.not-at-temple {
  font-size: 1rem;
  margin-right: 1.25rem;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
div.thumbnail img.default {
  height: 5.625rem;
  width: 5.625rem;
  opacity: .25;
}

.thumbnail a>img {
  height: auto;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
}

img {
  border: 0;
  height: auto;
  max-height: 9rem;
  max-width: 100%;
  vertical-align: middle;
  width: auto;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 2.625rem;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 1.25rem;
}

.loading-message{
  font-size: 1.125rem;
}

.fa-spinner {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

/* === SPINNER ANIMATIONS  === */
@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

