@import "partials/_vars.scss";

/* === GENERAL STYLES === */
body {
  font-size: 0.875rem;
}

.breadcrumb {
  background-color: transparent;
  font-size: 0.875rem;
}

.breadcrumb > li + li:before {
    color: #ccc;
    content: "/";
    padding: 0 0.3125rem;
}

#documents {
  background-color: $white;
  border-radius: 0 0 0.3125rem 0.3125rem;
  border-top: 1px solid #CCC;
  margin-left: 0;
  margin-top: -0.3125rem;
  padding: 0 0 0 20px;
}
div #documents .document {
  border-bottom: none !important;
}

.btn-link {
  color: $red;
}

.btn-link:hover {
  color: $red;
  text-decoration: underline;
}

/* === INDIVIDUAL RECORD PAGES === */
#record-page-content {
  background-color: $white;
  border-radius: 0.3125rem 0.3125rem 0 0;

  @media(max-width: 600px) {
    text-align: center;
 	}
}

.record-page-wrapper {
  padding: 1.25rem;
}

#record-page-content h1 {
  font-size: 1.75rem;
  padding-left: 1.15rem;
  padding-top: 1.25rem;
}

.record-page-wrapper .thumbnail {

  @media(max-width: 600px) {
    padding-bottom: 1.25rem;
 	}

}

dl dt.index-label {
  padding-right: 0;
  text-align: right;

  @media(max-width: 600px) {
    text-align: left;
 	}
}

dl dd {
  text-align: left;
}

#record-view-iframe, #stafflink {
  margin-left: 10%;
  max-width: 850px;
}

#stafflink {
  padding-top: 10px;
  padding-left: 7px;
}

h1.advanced.page-header a {
  display:none;
}

.page-header.row {
  margin-top: 7px;
  @media(max-width:767px) {
    margin-top: -14px;
  }
}

/* === INDEX SEARCH RESULTS=== */
.explantion-wrapper {
  position: inherit;
  justify-content: space-between;
  margin: 0 auto 20px auto;
  padding-left: 8%;
  @media(max-width: 600px) {
    margin: 30px auto 20px auto;
  }
  @media(max-width: 600px) {
    margin: 0 auto 20px auto;
  }
}

.explanation {
  font-size: 1.1em;
}

.explantion-btn {
  font-size: 1.1em;
  transform: translateY(-20%);
  @media(max-width: 485px) {
    transform: translateY(70%);
  }
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 1px 1px rgba(96, 96, 96, 0.075), 0 0 8px rgba(96, 96, 96, 0.6);
}

.format-concatenator {
  padding-left:7px;
  padding-right:14px;
}

.document-metadata form {
  margin-top: 14px;
}

.index-label {
  color: #595959;
}

.list_items {
  list-style-type: none;
}

/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  margin: 30px;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline !important;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  font-size: 16px;
  margin: 30px;
  text-align: center !important;
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  float: none;
  font-size: 18px;
  padding-top: 20px;
}

.no-results-tips {
  font-size: 16px;
}

.noresults {
  padding-bottom: 20px !important;
}

.not-at-temple {
  font-size: 16px;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
.thumbnail {
  border: 0;
  padding: 0;
}

img.default {
  height: 100px;
  max-height: 100%;
  max-width: 100%;
  opacity: .25;
  width: auto;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 42px;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 20px;
}

.loading-message{
  font-size: 18px;
}

.glyphicon.spinning {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

.electronic-notes {
  padding-top: 10px;
}

