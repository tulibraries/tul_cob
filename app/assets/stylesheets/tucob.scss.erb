@import "partials/_vars.scss";

/* === GENERAL STYLES === */

.container-xl {
  max-width: 1600px;
}

#page-wrapper {
  max-width: 1600px;
  margin: auto;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
}

h1 {
  font-size: 1.9rem;
}

h2 {
  font-size: 1.4rem;
}

h3 {
  font-size: 1.2rem;
}

h4 {
  font-size: 1.1rem; 
}

body {
  font-size: 0.875rem;
  max-width: 100%;
  color: $midnight-blue;

  // This prevents the background from scrolling when a modal is open
  .modal-open {
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
  }
}

a.skip-main {
    left: -999px;
    position: absolute;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    z-index: -999;
}
a.skip-main:focus {
    left: auto;
    top: auto;
    width: 30%;
    height: auto;
    overflow: auto;
    margin: 0 35%;
    padding: 5px;
    font-size: 20px;
    outline: 3px solid $cherry-red;
    text-align: center;
    z-index: 999;
}

#main-container {
  padding-bottom: 5.125rem !important;
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 0.0625rem 0.0625rem rgba(96, 96, 96, 0.075), 0 0 0.5rem rgba(96, 96, 96, 0.6);
}

#documents {
  margin-left: 0;
  padding: 0 0 0 1.25rem;

  @media(max-width: 600px) {
    padding-left: 0.9375rem !important;
  }
}

div #documents .document {
  border: none !important;
  margin-top: 35px;
}

.btn-link {
  color: $cherry-red;
}

.btn-link:hover {
  color: $cherry-red;
  text-decoration: underline;
}

.hidden {
  display: none;
}

.electronic-notes {
  padding-top: 0.625rem;
}

/* === LIBRARIAN TEMPLATE === */
.librarian-header {
  font-size: 1.5rem;
}

#marc_view  {
  color: $grey;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  font-size: 1rem;
  margin: 1.875rem 6.25rem;
}

#getting-started p a, .everything-explanation a {
  text-decoration: underline;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  padding-left: 5rem;

  @media(max-width: 600px) {
    padding-left: 0;
 	}
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  font-size: 1.125rem;
  padding-top: 1.25rem;
}

.no-results-tips {
  font-size: 1rem;
}

.noresults {
  padding-bottom: 1.25rem;
}

.not-at-temple {
  font-size: 1rem;
  margin-right: 1.25rem;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
div.thumbnail img.default {
  height: 5.625rem;
  width: 5.625rem;
  opacity: .25;
}

.thumbnail a>img {
  height: auto;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
}

img {
  border: 0;
  height: auto;
  max-height: 9rem;
  max-width: 100%;
  vertical-align: middle;
  width: auto;
}

.thumbnail img {
  min-width: 5rem;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */

.modal-title {
  font-size: 1.4rem;
}

.modal-content #login {
  padding: 2.625rem;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 1.25rem;
}

.faq-text-box {
  padding: .5rem .635rem;
}
.modal-footer-text {
  margin-left: 1.5rem;
}

.loading-message{
  font-size: 1.125rem;
}

.fa-spinner {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

/* === CHAT WIDGET === */
.lcs_slide_out {
  position: fixed;
  right: 0;
  z-index: 1000;
  transform: rotate(90deg) !important;
  @media (max-device-width: 767px) {
    display: none !important;
  }
}
.lcs_slide_out a, .lcs_slide_out a:hover {
  display:block;
  text-align: right;
  padding: 0.75rem 1.3125rem;
  position: absolute;
  background-image: url(<%= asset_path "chat.png" %>);
  background-position: center left 0.875rem;
  background-repeat: no-repeat;
  background-size: 1.875rem 1.875rem;
  font-size: 1.55rem;
  font-family: "Roboto";
  width: 8.125rem;
  height: 4rem;
  color: $white !important;
  background-color: $royal-blue;
  box-shadow: rgb(204, 204, 204) 0px 0px 0.3125rem;
  border: 0;
  border-bottom: solid $new-gold 0.1875rem;
  cursor: hand;
  text-decoration: none;
}

/* === SPINNER ANIMATIONS  === */
@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

// Overrides blacklight_range_limit settings.
.range_limit .chart_js {
  margin-left: 0px !important;
  margin-right: 0px !important;
}

