@import "partials/_vars.scss";

/* === GENERAL STYLES === */
body {
  font-size: 0.875rem;

  // This prevents the background from scrolling when a modal is open
  .modal-open {
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
  }
}

a.skip-main {
    left: -999px;
    position: absolute;
    top: auto;
    width: 1px;
    height: 1px;
    overflow: hidden;
    z-index: -999;
}
a.skip-main:focus {
    left: auto;
    top: auto;
    width: 30%;
    height: auto;
    overflow: auto;
    margin: 0 35%;
    padding: 5px;
    font-size: 20px;
    outline: 3px solid red;
    text-align: center;
    z-index: 999;
}

#main-container {
  padding-bottom: 5.125rem !important;
}

.form-control:focus {
  border-color: gray;
  box-shadow: inset 0 0.0625rem 0.0625rem rgba(96, 96, 96, 0.075), 0 0 0.5rem rgba(96, 96, 96, 0.6);
}

#documents {
  margin-left: 0;
  padding: 0 0 0 1.25rem;

  @media(max-width: 600px) {
    padding-left: 0.9375rem !important;
  }
}

div #documents .document {
  border-bottom: none !important;
}

.btn-link {
  color: $red;
}

.btn-link:hover {
  color: $red;
  text-decoration: underline;
}

.hidden {
  display: none;
}

.electronic-notes {
  padding-top: 0.625rem;
}

.error-header {
  font-family: "PT Sans";
}

/* === LIBRARIAN TEMPLATE === */
.librarian-header {
  font-size: 1.5rem;
}

#marc_view  {
  color: $grey;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  font-size: 1rem;
  margin: 1.875rem;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  padding-left: 5rem;

  @media(max-width: 600px) {
    padding-left: 0;
 	}
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  font-size: 1.125rem;
  padding-top: 1.25rem;
}

.no-results-tips {
  font-size: 1rem;
}

.noresults {
  padding-bottom: 1.25rem;
}

.not-at-temple {
  font-size: 1rem;
  margin-right: 1.25rem;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
div.thumbnail img.default {
  height: 5.625rem;
  width: 5.625rem;
  opacity: .25;
}

.thumbnail a>img {
  height: auto;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
}

img {
  border: 0;
  height: auto;
  max-height: 9rem;
  max-width: 100%;
  vertical-align: middle;
  width: auto;
}

.thumbnail img {
  min-width: 5rem;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 2.625rem;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 1.25rem;
}

.loading-message{
  font-size: 1.125rem;
}

.fa-spinner {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

/* === SPINNER ANIMATIONS  === */
@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

