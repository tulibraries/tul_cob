/* === HOME PAGES === */
div #main-container {
  min-height: calc(100vh - 100px) !important;
}

#getting-started {
  margin: 30px;
}

#getting-started a, .everything-explanation a {
  text-decoration: underline !important;
}

.everything-home-list {
  list-style-type: disc;
}

.books-home-text {
  font-size: 16px;
  margin: 30px;
  text-align: center !important;
}

/* === NO RESULTS === */
.no-results-header {
  border-top: none;
  float: none;
  font-size: 18px;
  padding-top: 20px;
}

.no-results-tips {
  font-size: 16px;
}

.noresults {
  padding-bottom: 20px !important;
}

.not-at-temple {
  font-size: 16px;
}

/* === LISTS === */
dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

#stimulus-warning {
  display: none;
}

/* === BOOK COVER THUMBNAILS  === */
.thumbnail {
  border: 0;
  display: block;
  margin-top: 10px;
  padding: 0;
  width: 100px;
}

img {
  min-height: 100px;
  max-height: 100%;
  max-width: 100%;
  width: auto;
}

.invisible {
  display: none !important;
}

/* === MODALS  === */
.modal-content #login {
  padding: 42px;
  padding-top: 0;
}

.modal-content .availability-modal {
  padding: 20px;
}

.loading-message{
  font-size: 18px;
}

.glyphicon.spinning {
  animation: spin 1s infinite linear;
  -webkit-animation: spin2 1s infinite linear;
}

@keyframes spin {
  from { transform: scale(1) rotate(0deg); }
  to { transform: scale(1) rotate(360deg); }
}

@-webkit-keyframes spin2 {
  from { -webkit-transform: rotate(0deg); }
  to { -webkit-transform: rotate(360deg); }
}

.electronic-notes {
  padding-top: 10px;
}

