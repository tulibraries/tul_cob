.cite-modal {
  padding: 14px;
}

#header-navbar .navbar-brand {
   background: transparent url(<%= asset_path 'NewCherryLogo.jpg' %>) no-repeat top left;
  /*background: transparent url(<%= asset_path 'temple-university-logo.png' %>) no-repeat top left;*/
}
div.navbar-form {
  position:relative;
  top: 8px;
  left: -42px;
  border: 0;
}
/* === AEON REQUESTS === */

.aeon-wrapper {
  display: table;
  margin-bottom: 20px;
  width: 100%;
}

.aeon-request {
  margin-left: 10px;
}

.aeon-text {
  display: table-cell;
}

/* === LISTS === */

dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

.list_items  {
  display: table-row;
  list-style-type: none;
  margin-right: 2px;
}

/* === ADVANCED SEARCH === */
input[type="radio"] + label {
  margin-left: 5px;
  margin-right: 10px;
}

.booleans {
  margin-bottom: 15px;
}

.advanced-search-select {
  margin-left: 10%;
}

.advanced_search_input {
  margin-bottom: 15px;
  margin-left: 10px;
}

.chosen-container-multi .chosen-choices {
  border-radius: 4px !important;
  min-height: 34px;
  padding: 0 5px 3.25px;
}

.begin-pub-date {
  margin-left: 20px;
  margin-right: -10px;
}

.end-pub-date {
  margin-left: -20px;
}
/* === AVAILABILITY === */

.availability {
  margin-top: 25px;
}

.availability button {
  display: none;
}

dd.blacklight-availability {
  display: inline-block;
  margin-left: 10px;
  vertical-align: middle;
}

#availability-heading {
  margin: 0;
  padding: 0;
}

.bl_alma_iframe {
  border: 0;
  width: 99.9%;
}

div.online_resources {
  border: 1px solid #ccc;
  padding: 10px;
}

.collapse-button {
  width: 121px !important;
  /*padding-left: 5px;*/
}

.button-break {
  padding: 3px;
}

.online-panel {
  border-bottom: 1px solid #ececec;
  padding-bottom: 10px;
  padding-top: 0;
}

div.physical-holding-panel {
  padding-top: 0;
}

/* === MEDIA QUERIES === */
@media (min-width: 768px) {
  .show_page_records dd {
    margin-bottom: 20px;
  }
}

@media (min-width: 992px) {
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: right;
    word-break: break-word;
    margin-left: 90px;
  }
  .dl-horizontal dd {
    margin-left: 198px;
  }
}

@media (max-width: 1200px) {
  div.navbar-form {
    left: -21px;
  }
}

@media (max-width: 991px) {
  div.navbar-form {
    left: 0px;
    top: 0px;
  }
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: left;
    word-break: break-word;
    margin-left: 0px;
    float: none;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
}

@media (max-width: 768px) {
  .show_page_records dd {
    margin-bottom: 20px;
  }
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
}

.format-concatenator {
  padding-left:7px;
  padding-right:14px;
}
.document-metadata form {
  margin-top: 14px;
}

div.navbar-masquerade {
  text-align: right;
  padding-right: 5px;
}

/* === BOOK COVER THUMBNAILS  === */

.thumbnail {
  display: block;
  padding: 0;
  width: 100px;
  border: 0;
}

img {
  height: auto;
  max-height: 100%;
  max-width: 100%;
  width: auto;
}

textarea#message-body.form-control {
  height: 100px;
}