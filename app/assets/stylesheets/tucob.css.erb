#header-navbar .navbar-brand {
  width: 300px;
  height: 67px;
  margin: 10px 21px 10px 0px;
  padding: 0;
   background: transparent url(<%= asset_path 'NewCherryLogo.jpg' %>) no-repeat top left;
  /*background: transparent url(<%= asset_path 'temple-university-logo.png' %>) no-repeat top left;*/
}

/* === LISTS === */

ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

.list_items  {
  display: table-row;
  float: left;
  list-style-type: none;
  margin-right: 2px;
}

/* === ADVANCED SEARCH === */
input[type="radio"] + label {
  margin-left: 5px;
  margin-right: 10px;
}

.booleans {
  margin-bottom: 15px;
}

.advanced-search-select {
  margin-left: 10%;
}

.advanced_search_input {
  margin-bottom: 15px;
  margin-left: 10px;
}

.chosen-container-multi .chosen-choices {
  border-radius: 4px;
  min-height: 34px;
  padding: 0 5px 3.25px;
}

.chosen-container {
  margin-left: 20px;
}

/* === AVAILABILITY === */

.availability {
  margin-top: 25px;
}

button.avail-button {
  display: inline-block;
  margin: 5px 5px 10px 10px;
}

.availability button {
  display: none;
}

dd.blacklight-availability {
  display: inline-block;
  margin-left: 10px;
  vertical-align: middle;
}

.availability_iframe {
  margin: 30px;
}

.panel-heading {
  margin: 0;
}

.bl_alma_iframe {
  border: 0;
  width: 99.9%;
}

div.online_resources {
  border: 1px solid #ccc;
  padding: 10px;
}

.collapse-button {
  width: 110px !important;
  padding-left: 5px;
}

/* === MEDIA QUERIES === */

@media (min-width: 768px) {
  .document dt {
    white-space: normal;
    width: 170px;
    word-break: break-word;
  }

  .show_page_records dd {
    margin-bottom: 20px;
  }
}
