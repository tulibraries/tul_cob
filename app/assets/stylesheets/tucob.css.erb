@import "_vars.scss";

.cite-modal {
  padding: 14px;
}
.page-links {

}
#record-page-nav-tools {
  float: right;
  padding-right: 142px;
}
.nav-tools {
  display: inline-block;
}
.nav-tools li {
  background-color: #f1efe7;
  border-radius: 4px;
  margin-right: 4px;
  padding: 7px 14px;
}
.nav-tools div.toggle_bookmark {
  padding-top: 0;
  min-height: auto;
}
.nav-tools div.toggle_bookmark label {
  color: #A50030;
  min-width:auto;
}
.nav-tools div.toggle_bookmark input.toggle_bookmark {
  visibility: hidden!important;
}
.nav-tools div.toggle_bookmark span {
  position:relative;
  left:-10px;
}
#sendto {
  margin-top: -14px;
  margin-left: -14px;
  position:absolute;
  z-index:9000;
  display:inline-block;
  background-color: #fff;
}
#sendto button {
  border: 0;
  background-color: #f1efe7;
  color: #A50030;
}
#sendto-menu {
  background-color: #fff;
}
#sendto ul {
  float:none;
  position:relative;
  background-color: #fff;
}
.sendto-item {
  margin-left: 0;
  display:block;
  background-color: #fff;
}
#header-navbar .navbar-brand {
   background: transparent url(<%= asset_path 'NewCherryLogo.jpg' %>) no-repeat top left;
   margin-left: 7px;
  /*background: transparent url(<%= asset_path 'temple-university-logo.png' %>) no-repeat top left;*/
}
div.navbar-form {
  display:inline-block;
  padding-top: 8px;
  margin-left: -42px;
  border: 0;
}

ul.navbar-nav {
  margin: auto auto;
}

form.search-query-form {
  margin-left: 7px;
}
#tools-navbar {
  
}
#tools-navbar li, #tools-navbar li a {
  display: inline-block;
}
/* === AEON REQUESTS === */

.aeon-wrapper {
  display: table;
  margin-bottom: 20px;
  width: 100%;
}

.aeon-request {
  margin-left: 10px;
}

.aeon-text {
  display: table-cell;
}

/* === LISTS === */

dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

.list_items  {
  display: table-row;
  list-style-type: none;
  margin-right: 2px;
}

/* === ADVANCED SEARCH === */
input[type="radio"] + label {
  margin-left: 5px;
  margin-right: 10px;
}

.booleans {
  margin-bottom: 15px;
}

.advanced-search-select {
  margin-left: 10%;
}

.advanced_search_input {
  margin-bottom: 15px;
  margin-left: 10px;
}

.chosen-container-multi .chosen-choices {
  border-radius: 4px !important;
  min-height: 34px;
  padding: 0 5px 3.25px;
}

.begin-pub-date {
  margin-left: 20px;
  margin-right: -10px;
}

.end-pub-date {
  margin-left: -20px;
}
/* === AVAILABILITY === */

.availability {
  margin-top: 25px;
}

.availability button {
  display: none;
}

dd.blacklight-availability {
  display: inline-block;
  margin-left: 10px;
  vertical-align: middle;
}

#availability-heading {
  margin: 0;
  padding: 0;
}

.bl_alma_iframe {
  border: 0;
  width: 99.9%;
}

div.online_resources {
  border: 1px solid #ccc;
  padding: 10px;
}

.collapse-button {
  width: 121px !important;
  /*padding-left: 5px;*/
}

.button-break {
  padding: 3px;
}

.online-panel {
  border-bottom: 1px solid #ececec;
  padding-bottom: 10px;
  padding-top: 0;
}

div.physical-holding-panel {
  padding-top: 0;
}

.show_page_records dd {
  margin-bottom: 7px;
}

/* === MEDIA QUERIES === */

@media (min-width: 992px) {
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: right;
    word-break: break-word;
    margin-left: 90px;
  }
  .dl-horizontal dd {
    margin-left: 198px;
  }
}

@media (max-width: 1200px) {
  div.navbar-form {
    margin-left: -21px;
  }
}

@media (max-width: 991px) {
  div.navbar-form {
    margin-left: 0px;
    padding-top: 0px;
  }
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: left;
    word-break: break-word;
    margin-left: 0px;
    float: none;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
  #record-page-nav-tools {
    float: left!important;
    clear: both;
    padding-top: 14px;
    padding-right: 0;
  }
}

@media (max-width: 768px) {
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
  #user-util-links li, #user-util-links li a, ul.navbar-nav {
    display: inline-block;
    float: left;
  }
  #appliedParams {
    padding-left: 7px;
  }
  #previousNextDocument {
    padding-left: 7px;
  }
  #document h1 {
    padding-left: 7px;
  }
  .col-xs-12 {
    float: none;
  }
@media (max-width: 601px) {
  #nav-tools {
    margin-top: 14px;
    width: 100%;
  }
  #tools-navbar {
    padding-left: 0;
    }
  #tools-navbar li, #tools-navbar li a {
    display: block;
    width: 100%;
    color: white;
    background-color: #A50030;
    border-radius: 0;
    margin-bottom: 2px;
    padding-left: 10px;
  }
  .nav-tools div.toggle_bookmark {
    padding-top: 0;
    min-height: auto;
  }
  .nav-tools div.toggle_bookmark label {
    color: #fff;
    min-width:auto;
  }
  .nav-tools div.toggle_bookmark input.toggle_bookmark {
    visibility: hidden!important;
  }
  .nav-tools div.toggle_bookmark span {
    position:relative;
    left:-10px;
  }
  #sendto {
    margin-top: auto;
    margin-left: auto;
    position:relative;
    z-index:0;
    display:block;
    background-color: transparent;
    float: none!important;
  }
  #sendto button {
    border: 0;
    background-color: #A50030;
    color: #fff;
  }
  #sendto-menu {
    background-color: #A50030;
  }
  #sendto ul {
    float:none;
    position:relative;
    background-color: #fff;
  }
  .sendto-item {
    margin-left: 0;
    display:block;
    background-color: #A50030;
    /*border-bottom: solid #fff 2px;*/
  }
}

