/* === MEDIA QUERIES === */
@media (min-width: 768px) {
  .show_page_records dd {
    margin-bottom: 20px;
  }
}

@media (min-width: 992px) {
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: right;
    word-break: break-word;
    margin-left: 90px;
  }
  .dl-horizontal dd {
    margin-left: 198px;
  }
}

@media (max-width: 1200px) {
  div.navbar-form {
    left: -21px;
  }
}

@media (max-width: 991px) {
  div.navbar-form {
    left: 0px;
    top: 0px;
  }
  .document dt {
    white-space: normal;
    width: 100px;
    text-align: left;
    word-break: break-word;
    margin-left: 0px;
    float: none;
  }
  .dl-horizontal dd {
    margin-left: 0px;
    width: 100%;
  }
  .book-info-srch {
    float:none;
    margin-left: 21px;
  }
}

@media (max-width: 768px) {
  .show_page_records dd {
    margin-bottom: 20px;
  }
  .book_format {
    margin-left: 21px;
  }
  span.book {
    margin-left: 0;
  }
}

.format-concatenator {
  padding-left:7px;
  padding-right:14px;
}
.document-metadata form {
  margin-top: 14px;
}

div.navbar-masquerade {
  text-align: right;
  padding-right: 5px;
}

