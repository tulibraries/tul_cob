/* === AEON REQUESTS === */

.aeon-wrapper {
  display: table;
  margin-bottom: 20px;
  width: 100%;
}

.aeon-request {
  margin-left: 10px;
}

.aeon-text {
  display: table-cell;
}

/* === LISTS === */

dd ul {
  display: table;
  list-style: none;
  margin: 0;
  padding: 0;
}

.list_items  {
  display: table-row;
  list-style-type: none;
  margin-right: 2px;
}

/* === ADVANCED SEARCH === */
input[type="radio"] + label {
  margin-left: 5px;
  margin-right: 10px;
}

.booleans {
  margin-bottom: 15px;
}

.advanced-search-select {
  margin-left: 10%;
}

.advanced_search_input {
  margin-bottom: 15px;
  margin-left: 10px;
}

.chosen-container-multi .chosen-choices {
  border-radius: 4px !important;
  min-height: 34px;
  padding: 0 5px 3.25px;
}

.pub-date {
  padding-left: 0;
  padding-right: 0;
}
.pub-date-separator {
  text-align:center;
  padding-top: 6px;
}

.advanced-search-start-over, .advanced-search-start-over a:hover, .advanced-search-start-over a:focus {
    color: #fff!important;
    background-color: #337ab7!important;
    border-color: #2e6da4;
    margin-right: 4px;
}

/* === AVAILABILITY === */

.availability {
  margin-top: 25px;
}

.availability button {
  display: none;
}

dd.blacklight-availability {
  display: inline-block;
  margin-left: 10px;
  vertical-align: middle;
}

#availability-heading {
  margin: 0;
  padding: 0;
}

.bl_alma_iframe {
  border: 0;
  width: 99.9%;
}

div.online_resources {
  border: 1px solid #ccc;
  padding: 10px;
}

.collapse-button {
  width: 121px !important;
  /*padding-left: 5px;*/
}

.availability-toggle-details {
  padding-left: 30px;
}

.button-break {
  padding: 3px;
}

.online-panel {
  border-bottom: 1px solid #ececec;
  padding-bottom: 10px;
  padding-top: 0;
}

div.physical-holding-panel {
  padding-top: 0;
}

button.collapse-button .avail-label:after {
    /* symbol for "opening" panels */
    font-family: 'Glyphicons Halflings';  /* essential for enabling glyphicon */
    content: "\e114";    /* adjust as needed, taken from bootstrap.css */
    float: right;        /* adjust as needed */
    color: white;         /* adjust as needed */
}
button.collapse-button.collapsed .avail-label:after {
    /* symbol for "collapsed" panels */
    content: "\e080";    /* adjust as needed, taken from bootstrap.css */
}

