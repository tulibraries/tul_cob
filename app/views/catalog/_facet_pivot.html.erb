<% not_selected = !pivot_facet_in_params?(field_name, display_facet) %>
<ul <%=facet_value_id(display_facet)%> class="pivot-facet list-unstyled <%=initial_collapse(display_facet, not_selected)%>">
  <% display_facet.items.each do |item| %>
    <li>
    <span class="facet-values">
      <% unless item.items.blank?  %>
        <a class="far fa-plus-square text-dark"  href="<%='#'+item.field.parameterize+'-'+item.value.parameterize%>" data-target=<%='#'+item.field.parameterize+'-'+item.value.parameterize%> data-toggle="collapse"></a>
      <% end %>

    <% if facet_in_params?(field_name, item) %>
        <%= render_selected_facet_value(field_name, item) %>
      <% else %>
        <%= render_facet_value(field_name, item) %>
    <% end %>
    </span>

    <% unless item.items.blank? %>
      <%= render "facet_pivot", display_facet: item, field_name: field_name %>
    <% end %>
    </li>
  <% end %>

</ul>
