<% doc_presenter = document_presenter(document) %>

<div class="document-metadata-sections clearfix flex-row-reverse">
<%= render "index_summary_field", :document => document %>

<%# default partial to display solr document fields in catalog index view %>
  <% unless controller_name == "databases" %>
    <div <%= render_google_books_data_attribute(document) %> class="thumbnail float-right">
      <%= image_tag "", :alt => "", :class => "book_cover invisible"  %>
      <%= image_tag default_cover_image(document), :class => "default mr-3", :alt => "" %>
    </div>
  <% end %>

  <%= render "fields", document: document, document_counter: document_counter %>

  <%= render_availability(document) %>
</div>
