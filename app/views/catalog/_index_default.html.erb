<% doc_presenter = document_presenter(document) %>

<div class="clearfix flex-row-reverse w-100 pt-2">
<%# default partial to display solr document fields in catalog index view %>
  <% unless controller_name == "databases" %>
    <div <%= render_google_books_data_attribute(document) %> class="book-info-srch thumbnail float-right">
      <%= link_to document do %>
        <%= image_tag "", :alt => "Book cover for " + document["title_statement_display"].to_s, :class => "book_cover invisible"  %>
        <%= image_tag default_cover_image(document), :class => "default mr-3", :alt => "Default icon for " + document["title_statement_display"].to_s %>
      <% end %>
    </div>
  <% end %>
  <div class="book_info w-100">
    <%= render "fields", document: document, document_counter: document_counter %>
  </div>
</div>

<%= render_availability(document) %>
