<div class="row">
  <% if show_sidebar? %>
    <div id="sidebar" class="<%= sidebar_classes %> mt-4 rounded">
      <%= render "search_sidebar" %>
    </div>
  <% end %>

  <div id="content" class="<%= "col-md-8 bg-white rounded" if show_sidebar? %> mt-4 ml-md-4 ml-sm-0 pr-0 pl-0">
    <% unless has_search_parameters? %>
      <%# if there are no input/search related params, display the "home" partial -%>
      <%= render "home" %>
      <%= render "shared/sitelinks_search_box" %>
    <% else %>
      <%= render "search_results" %>
    <% end %>
  </div>
</div>
