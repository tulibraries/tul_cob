
<% doc_presenter = index_presenter(document) %>
  <dl class="row mt-0 pt-0 document-metadata blacklight-availability availability-ajax-load" data-availability-ids="<%= document.alma_availability_mms_ids.join(',') %>" ></dl>

  <%= render_online_availability_button(document) %>
  <%= render_purchase_order_availability(document: document) %>

  <% if document.fetch("availability_facet", []).include? "At the Library" %>
    <div class="row button-break"></div>
    <div>
      <div class="controls">
        <button data-availability-ids="<%= document.alma_availability_mms_ids.join(',') %>" class="btn btn-sm btn-default availability-toggle-details" data-toggle="collapse" data-target="#physical-document-<%=  document.id %>" id="available_button-<%=  document.id %>" aria-expanded="false" aria-controls="physical-document-<%=  document.id %>">
          <i class="fa fa-spinner" role="spinbutton"></i>
          <span>Loading...</span>
        </button>


      <div  data-availability-ids="<%= document.alma_availability_mms_ids.join(',') %>" id="physical-document-<%= document.id %>" class="collapse panel-content avail-container index-avail-container">
        <div class="table-wrapper">
          <div class="border border-tan-border">
            <%= render "physical_availability_card", document: document, document_counter: document.id %>
          </div>
        </div>
        <div><%= render "check_holdings", document: document, document_counter: document.id %></div>
      </div>
    </div>
  <% end %>
