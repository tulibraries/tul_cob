<%= form_tag search_action_url, method: :get, class: "search-query-form d-flex", role: "search", id: "catalog-search" do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>

  <% if search_fields.length > 1 %>
    <label for="search_field" class="sr-only"><%= t("blacklight.search.form.search_field.label") %></label>
  <% end %>

  <div class="input-group basic-search-group">
    <% if search_fields.length > 1 %>
      <%= select_tag(:search_field, options_for_select(search_fields, h(search_params[:search_field])), title: t("blacklight.search.form.search_field.title"), id: "search_field", class: " custom-select search-field flex-shrink-1 border-teal border-right-0") %>
    <% elsif search_fields.length == 1 %>
      <%= hidden_field_tag :search_field, search_fields.first.last %>
    <% end %>

    <label for="q" class="sr-only"><%= t("blacklight.search.form.search.label") %></label>
    <%= text_field_tag :q, search_params[:q], placeholder: t("blacklight.search.form.search.placeholder"), class: "search_q q form-control border-teal w-50 #{border_radius_class}", id: "q", autofocus: presenter.autofocus?, data: { autocomplete_enabled: autocomplete_enabled? }  %>

    <span class="input-group-append">
      <button type="submit" class="btn btn-website-bright-green search-btn border-teal" id="search" aria-label="search">
        <i class="fa fa-search"></i>
      </button>
    </span>
  </div>
<% end %>

<div class="text-md-center">
  <%= render "advanced_search_link" %>
</div>
