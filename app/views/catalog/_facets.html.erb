<% # main container for facets/limits menu -%>

<% if has_facet_values? || has_search_parameters? %>

<div id="facets" class="facets w-100">
  <div class="d-flex p-0 align-items-center limit-search ">
    <button id="facet-filter-icon" type="button" class="hidden facets-toggler p-0 border-0 mx-2" data-toggle="collapse" data-target="#facet-panel-collapse" aria-controls="facet-panel-collapse" aria-expanded="false" aria-label="Toggle facets">
      <span class="sr-only">Toggle facets</span>
      <span id="facet-icons" class="rounded open-facet-icon"></span>
    </button>

    <h2 class="small-limit-search-heading d-none pt-2">
      <%= t("blacklight.search.facets.title") %>
    </h2>

    <%= link_to t("blacklight.search.start_over"), bento_search_engine_path, :class => "catalog_startOverLink btn btn-sm", :id=>"startOverLink" %>
  </div>

  <div class="navbar p-0 mt-4 mb-0">
    <h2 class="limit-search-heading">
      <%= t("blacklight.search.facets.title") %>
    </h2>
  </div>

   <%= render "constraints" %>

   <div id="facet-panel-collapse" class="facets-collapse collapse show">
     <%= has_search_parameters? ? render_facet_partials : render_home_facets %>
   </div>
   <%= render_solr_search_tweaks %>
</div>
<% end %>
