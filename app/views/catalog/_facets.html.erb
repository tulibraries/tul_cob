<% # main container for facets/limits menu -%>

<% if has_facet_values?(facet_field_names, @response) || has_search_parameters? %>

<div id="facets" class="facets w-100">
  <div class="navbar p-0 mt-4 mb-0">
    <h2 class="d-none d-md-block limit-search-heading">
      <%= t("blacklight.search.facets.title") %>
    </h2>
  </div>

   <%= render "constraints" %>

  <%= link_to t("blacklight.search.start_over"), bento_search_engine_path, :class => "catalog_startOverLink btn mb-md-3", :id=>"startOverLink" %>

  <button id="filter-mobile" type="button" class="btn collapsed d-md-none" data-toggle="collapse" data-target="#facet-panel-collapse" aria-controls="facet-panel-collapse" aria-expanded="false" aria-label="Toggle facets">
    Fitler <span class="caret"></span>
  </button>


   <div id="facet-panel-collapse" class="facets-collapse collapse show">
     <%= has_search_parameters? ? render_facet_partials(facet_field_names, :response => @response) : render_home_facets %>
   </div>
   <%= render_solr_search_tweaks %>
</div>
<% end %>
