<div class="document-metadata-sections clearfix flex-row-reverse">
<%= render "index_summary_field", :document => document, document_counter: document_counter %>

<%# default partial to display solr document fields in catalog index view -%>
  <div class="thumbnail float-right" <%= isbn_data_attribute(document) %> >
    <% if document['web_photo_display'] %>
      <%= link_to document do %>
        <%= image_tag document['web_photo_display'].first, :alt => "Image of " + document["title_statement_display"].to_s, :class => "staff_thumbnail"  %>
      <% end %>
    <% end %>
  </div>

  <%= render "fields", document: document, document_counter: document_counter %>

</div>
