<div id="login" class="pl-5">
<h2 class="pb-3">Log in to My Library Account</h2>

<%- if devise_mapping.omniauthable? %>
  <ul class="pb-3">
    <li>
      <%= link_to "Students, Faculty, and Staff" , omniauth_authorize_path(resource_name, :shibboleth, target: params[:redirect_to] ) %>
    </li>
    <li>
      <%= link_to "Visitors", alma_social_login_url(redirect_to: params[:redirect_to]) %>
    </li>
  </ul>
<% end -%>

<% if Rails.env.development? %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row form-group pl-5">
    <%= f.label :email, class: "col-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="row form-group pl-5">
    <%= f.label :password, class: "col-1" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="row form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary py-1" %>
  </div>
  <% end %>
<% end %>
</div>
