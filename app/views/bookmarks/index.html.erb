<% @page_title = t("blacklight.bookmarks.page_title", :application_name => application_name) %>

<div class="container">
  <h1 class="page-heading bookmark-heading mb-4"><%= t("blacklight.bookmarks.title") %></h1>
  <div id="content" class="bookmarks-page bg-white rounded p-0 mx-auto">
    
  <% if !current_user %>
    
    <p class="mb-4"><%= t("blacklight.bookmarks.need_login") %></p>

  <% elsif @response.documents.blank? %>

    <h2 class="section-heading no-bookmarks-message"><%= t("blacklight.bookmarks.no_bookmarks") %></h2>
  
  <% else %>
    <span id="alma_availability_url" data-url="<%= alma_availability_url(format: :json) %>" ></span>

    <%= render "sort_and_per_page" %>
    <h2 class="section-heading sr-only visually-hidden"><%= t("blacklight.bookmarks.list_title") %></h2>
    <%= render_document_index @response.documents %>
    <%= render "results_pagination" %>

  <% end %>
  </div>
</div>
