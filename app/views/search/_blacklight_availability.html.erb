<% if has_one_electronic_resource?(item.custom_data) %>
  <%= link_to "Online", bento_single_link(item.custom_data["electronic_resource_display"]), class:"bento-online btn btn-sm bento-avail-btn mt-1", title:"This link opens the resource in a new tab.", target:"_blank" %>
<% elsif has_many_electronic_resources?(item.custom_data) || render_hathitrust_button(item.custom_data) %>
  <%= link_to "Online", solr_document_url(item.custom_data["id"]), class:"bento-online btn btn-sm bento-avail-btn mt-1" %>
<% end %>
