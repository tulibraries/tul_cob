    <% if @results %>
      <% if !cookies.fetch("bentoOnce", false) %>
        <div class="row" data-target="explanation.bento" data-controller="explanation">
          <div class="col-md-6 col-md-offset-3">
            <p>
              <%= t('bento.explanation_part_one_html', href: link_to(t("bento.explanation_part_one_href"), root_path)) %>
              <%= t('bento.explanation_part_two_html', href: link_to(t("bento.explanation_part_two_href"), t("bento.explanation_part_two_link"))) %>
            </p>
          </div>
          <div class="col-md-2">
            <button class="btn btn-link" data-action="explanation#bento">Hide</button>
          </div>
        </div>
      <% end %>
      <div class="bento-container">
          <%= render_bento_results %>
        <% else %>
          <%= render("home_text") %>
        <% end %>
      </div>
