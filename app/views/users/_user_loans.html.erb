<div class="container user-loans" data-controller="loans" data-loans-url=<%= user_loans_path %>>
  <h2 class="user_section_title">My Items</h2>
  <div id="renewal-warning" class="p-0 m-0" aria-live="assertive"></div>
  <%= form_for :user_loans, url: users_renew_selected_path(format: :js), id: 'renewals', remote: true do %>
    <table class="table user-table user-holds-table table-responsive border-0 px-2">
      <caption class="sr-only">Table of Current Loans for this user</caption>
      <thead>
        <tr>
          <th colspan="1">#</th>
          <th colspan="3" scope="col" aria-sort="none" data-loans-sort-key="title" data-sort-state="none">
            <button type="button" class="loan-sort-button" data-action="click->loans#toggleSort" data-sort-key="title">
              <span>Title</span>
              <span class="loan-sort-icon loan-sort-icon--none"><i class="fas fa-sort" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--asc"><i class="fas fa-chevron-up" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--desc"><i class="fas fa-chevron-down" aria-hidden="true"></i></span>
            </button>
          </th>
          <th colspan="1" scope="col" aria-sort="none" data-loans-sort-key="call_number" data-sort-state="none">
            <button type="button" class="loan-sort-button" data-action="click->loans#toggleSort" data-sort-key="call_number">
              <span>Call Number</span>
              <span class="loan-sort-icon loan-sort-icon--none"><i class="fas fa-sort" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--asc"><i class="fas fa-chevron-up" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--desc"><i class="fas fa-chevron-down" aria-hidden="true"></i></span>
            </button>
          </th>
          <th colspan="1" scope="col" aria-sort="none" data-loans-sort-key="due" data-sort-state="none">
            <button type="button" class="loan-sort-button" data-action="click->loans#toggleSort" data-sort-key="due">
              <span>Due</span>
              <span class="loan-sort-icon loan-sort-icon--none"><i class="fas fa-sort" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--asc"><i class="fas fa-chevron-up" aria-hidden="true"></i></span>
              <span class="loan-sort-icon loan-sort-icon--desc"><i class="fas fa-chevron-down" aria-hidden="true"></i></span>
            </button>
          </th>
          <th colspan="3" class="renew">
            <label for="checkall" class="pe-2 mb-0">Select All</label><input type="checkbox" id="checkall" aria-label="select all" name="checkall" value="Select All" data-action="click->loans#selectallchecks">
          </th>
        </tr>
      </thead>
      <% if browser.ie?("<11") %>
      <tbody>
        <%= render partial: "loans_details", locals: { loans: current_user.loans } %>
      </tbody>
      <% else %>
      <tbody data-loans-target="table">
        <tr>
          <td colspan="7" class="text-center" data-loans-target="spinner">
            <i class="fa fa-spinner fa-spin" aria-busy="true" aria-live="polite"></i>
            <span class="loading-message"> Loading Loans...</span>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>

  <% end %>
</div>
