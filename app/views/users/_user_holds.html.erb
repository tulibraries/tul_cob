<div class="container user-holds" data-controller="holds" data-holds-url=<%= user_holds_path %>>
  <h2 class="user_section_title">My Requests</h2>
  <table class="table user-table table-responsive border-0 px-2">
    <caption class="sr-only">Table of Current Fines for this user</caption>
    <thead>
      <tr>
        <th class="hold-number">#</th>
        <th class="hold-title">Title</th>
        <th class="hold-until">Held Until</th>
        <th class="hold-status">Status</th>
      </tr>
    </thead>
    <% if browser.ie?("<11") %>
    <tbody>
      <%= render partial: "holds_details", locals: {holds: current_user.holds} %>
    </tbody>
    <% else %>
    <tbody data-target="holds.table">
      <tr>
        <td colspan="4" class="text-center" data-target="holds.spinner">
          <i class="fa fa-spinner" aria-busy="true" aria-live="polite"></i>
          <span class="loading-message"> Loading Holds...</span>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
