<% fines.each_with_index do |fine, counter| %>
  <tr>
    <td><%= counter + 1 %></td>
    <td><%= fine.type['desc'] %></td>
    <td><% if fine.respond_to? :title %><%= fine.title %><% end %></td>
    <td><%= number_to_currency(fine.balance.to_f) %></td>
  </tr>
<% end %>

<tr class="total-fines bg-lighter-grey text-cherry-red">
  <td colspan="3"  class="fine-label">
    Total
  </td>
  <td colspan="1">
    <%= number_to_currency(fines.sum(&:balance)) %>
  </td>
</tr>
