<div class="card p-0 request-card">
  <div class="request-heading bg-lighter-grey">
    <h2 class="card-title mb-0">
      <a class="booking-request accordian-toggle" aria-expanded="<%= only_one_option_allowed(request_options, @books, document) %>" data-bs-toggle="collapse" data-parent="#request-accordian-<%=  @mms_id %>" href="#collapseThree-<%= @mms_id %>"><%= t("requests.booking_allowed_link") %></a>
   </h2>
  </div>

  <div id="collapseThree-<%= @mms_id %>" class="collapse <%= 'show' if only_one_option_allowed(request_options, @books, document)%>">
    <div class="card-body">
      <%= render "booking_request_form" %>
    </div>
  </div>
</div>
