<div class="card p-0 request-card">
  <div class="request-heading bg-lighter-grey">
    <h2 class="card-title mb-0">
      <a class="booking-request accordian-toggle" aria-expanded="<%= only_one_option_allowed(request_options, @books, document, @equipment) %>" data-bs-toggle="collapse" data-parent="#request-accordian-<%=  @mms_id %>" href="#collapseOpenShelves-<%= @mms_id %>"><%= t("requests.open_shelves_header") %></a>
    </h2>
  </div>
  <div id="collapseOpenShelves-<%= @mms_id %>" class="collapse <%= "show" if only_one_option_allowed(request_options, @books, document, @equipment) %>">
    <div class="card-body pb-0">
      <p><%= t("requests.open_shelves_text") %></p>
    </div>
  </div>
</div>


