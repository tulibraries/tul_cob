<div class="card p-0 request-card">
  <div class="request-heading bg-tan">
    <h4 class="card-title">
        <a class="digital-request accordian-toggle"  data-toggle="collapse" data-parent="#request-accordian-<%=  @mms_id %>" href="#collapseTwo-<%= @mms_id %>"><%= t("requests.digitization_allowed_link") %></a>
    </h4>
  </div>

  <div id="collapseTwo-<%= @mms_id %>" class="collapse <%= 'in' if only_one_option_allowed(request_options)%>">
    <div class="card-body">
      <h5 class="request-header"><%= t("requests.form.header") %></h5>
      <%= render "digitization_request_form" %>
    </div>
  </div>
</div>
