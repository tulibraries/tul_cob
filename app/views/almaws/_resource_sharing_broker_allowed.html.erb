<div class="card p-0 request-card">
  <div class="request-heading bg-lighter-grey">
    <h2 class="card-title mb-0">
      <a class="booking-request accordian-toggle" aria-expanded="<%= only_one_option_allowed(request_options, @books, document, @equipment) %>" data-toggle="collapse" data-parent="#request-accordian-<%=  @mms_id %>" href="#collapseFour-<%= @mms_id %>"><%= t("requests.resource_sharing_broker_allowed_link") %></a>
    </h2>
  </div>
</div>

<div id="collapseFour-<%= @mms_id %>" class="collapse <%= 'show' if only_one_option_allowed(request_options, @books, document, @equipment)%>">
  <div class="card-body">
    <p><%= t("requests.resource_sharing_broker_text") %></p>
      <%= link_to(t("requests.resource_sharing_broker_link"), ez_borrow_link_title(request_options.ez_borrow_link), id: "ez-borrow-button", class: "btn btn-primary request-btn", target: "_blank") %>
  </div>
</div>
