    <p><%= t("requests.resource_sharing_broker_text") %></p>
      <%= link_to(t("requests.resource_sharing_broker_link"), request_options.ez_borrow_link, id: "ez-borrow-button", class: "btn btn-primary request-button search-results-request-btn", target: "_blank") %>
