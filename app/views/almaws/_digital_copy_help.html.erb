<div class="card p-0 request-card">
  <div class="request-heading bg-lighter-grey">
    <h2 class="card-title mb-0">
      <a class="booking-request accordian-toggle" aria-expanded="<%= only_one_option_allowed(request_options, @books, document, @equipment) %>" data-bs-toggle="collapse" data-parent="#request-accordian-<%=  @mms_id %>" href="#collapseDigitalHelp-<%= @mms_id %>"><%= t("requests.digital_copy_header") %></a>
    </h2>
  </div>
  <div id="collapseDigitalHelp-<%= @mms_id %>" class="collapse <%= 'show' if only_one_option_allowed(request_options, @books, document, @equipment)%>">
    <div class="card-body pb-0">
      <p><%= t("requests.digital_help_text_one") %></p>
      <p><%= t("requests.digital_help_text_two_html", href: link_to(t("requests.digital_help_text_two_href"), build_libwizard_url(document), target: "_blank")) %></p>
      <p><%= t("requests.digital_help_text_three_html", href: link_to(t("requests.digital_help_text_three_href"),  t("requests.digital_help_text_three_link"), target: "_blank")) %></p>
    </div>
  </div>
</div>
