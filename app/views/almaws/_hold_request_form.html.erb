<%= form_with url: request_options_path, class: 'form-horizontal request-form', method: :post do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 hold-form">
        <%= label("", :pickup_location, "Pickup Location:") %>
        <%= select_tag(:pickup_location, options_for_select(@pickup_locations), class: "request-form form-control", include_blank: true, required: true) %>
      </div>
    </div>

    <div class="row hold-form">
      <div class="col-sm-6">
        <%= form.label(:not_needed, "Not Needed After (optional):") %>
        <%= select_date Date.today, prefix: :last_interest_date %>
      </div>
    </div>

    <div class="row hold-form">
      <div class="col-sm-6">
        <%= form.label(:comment, "Notes: (optional)") %>
        <%= form.text_area :comment, class: "request-form form-control" %>
      </div>
    </div>

    <%= form.submit"Request", class:"btn btn-primary" %>

  </div>
<% end %>
