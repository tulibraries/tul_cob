
  <table class="table table-responsive border-bottom">
    <% unless @items.empty? %>
      <% sort_order_for_holdings(@items).each do |key,items| %>
        <thead class="table-heading">
          <tr>
            <th colspan="6">
              <%= library_name_from_short_code(key) %>
            </th>
          </tr>
        </thead>
        <tbody >
          <% items.each do |item| %>
            <tr class="sr-only">
              <th scope="col">Item Location</th>
              <th scope="col">Call Number</th>
              <th scope="col">Description</th>
              <th scope="col">Material Type</th>
              <th scope="col">Public Note</th>
              <th scope="col">Availability Status</th>
          </tr>
            <tr>
              <td scope="row"><%= location_status(item) %></td>
              <td><%= item.call_number %> <%= alternative_call_number(item) %></td>
              <td><%= description(item) %></td>
              <td><%= physical_material_type(item) %></td>
              <td><%= public_note(item) %></td>
              <td><%= availability_status(item) %></td>
            <!-- <tr>
              <td scope="row"><strong>Request Options: </strong> <%= select_tag "requests", options_for_select([ "option1", "option2" ]) %></td>
            </tr> -->
          <% end %>
        </tbody>
      <% end %>
      <% else %>
      <tr>
        <td>
          We are unable to find availability information for this record. Please contact the library for more information.
        </td>
      </tr>
    <% end %>
  </table>
